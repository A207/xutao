<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--内部颜色-->
    <solid android:color="#ffccdd"></solid>
    <!--边框-->
    <stroke android:color="aaccff" android:dashWidth="2dp"></stroke>
    <!--边框圆角-->
    <corners android:radius="30dp"></corners>
    <!--间距-->
    <padding android:bottom="4dp" android:top="2dp" android:left="10dp" android:right="10dp"></padding>
    <!--渐变色-->
    <gradient android:startColor="#aaffcc" android:endColor="#ccffaa" android:centerColor="#dccaa"
        android:type="linear"></gradient>
</shape>


